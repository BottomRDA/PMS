{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@styles/*": ["src/styles/*"]
        }
    },
    "include": ["src", "types.d.ts"],
    "exclude": ["node_modules"]
}